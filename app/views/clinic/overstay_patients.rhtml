  </head>
  <body >
    <%= "<br />" * 5 %>
    <div>
      <table  id="table_id" class="display" >
        <thead>
          <tr>
            <th style="text-align:left; max-width: 130px;">National ID</th>
            <th style="text-align:left; max-width: 150px;">First Name</th>
            <th style="text-align:left; max-width: 150px;">Last Name</th>
            <th style="text-align:left; max-width: 150px;">Date Admitted</th>
            <th style="text-align:left; max-width: 150px;">Admission Period</th>
            <th style="max-width: 30px">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <% @patient_details.each do |key, value| %>
          <tr>
            <td><%= value[:national_id] %></td>
            <td><%= value[:fname] %></td>
            <td><%= value[:lname] %></td>
            <td><%= value[:date_admitted] %></td>
            <td><%= value[:admission_period][0].to_s + ' Months ' + value[:admission_period][1].to_s + ' days'  %></td>
            <td style="background-color: white;">
              <img patient_id="<%= key %>" src="/images/unticked.jpg" onclick="changeImage(this)"></img>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="horizontal_line">
      <hr width="100%" color="gray"/>
    </div>
    <div id="keypad">
      <span class="keypad">
      </span>
    </center>
  </div>
</body>
</html>
<script>
   patient_ids = []
   function changeImage(element){
     src = element.getAttribute('src');
     patient_id = element.getAttribute('patient_id');
     if (src == "/images/unticked.jpg")
        {
          element.src = "/images/ticked.jpg"
          patient_ids.push(patient_id)

        }
     else
       {
          element.src = "/images/unticked.jpg"
          index = patient_ids.indexOf(patient_id)
          patient_ids.splice(index,1)
       }
   }
   function submitForm(){
     if (patient_ids.size() > 0){
        body = document.getElementsByTagName("body")[0]
        form = document.createElement("form")
        form.method = "POST"
        form.action = "/clinic/discharge_overstay_patients"
        body.appendChild(form)
        input = document.createElement("input")
        input.type="hidden"
        input.name = "patient_ids"
        input.value = patient_ids
        form.appendChild(input)
        form.submit();
     }
     else{
        window.location = "/clinic"
     }
   }

   function setAttributes(){
      finishButton = document.getElementById('finishButton')
      finishButton.onclick = function(){
          submitForm();
      }
   }
   setTimeout("setAttributes();", 50);
</script>