     <b style="position:relative; top:0px;margin-left:75px">End Date: <%=@end_date.strftime("%d-%m-%Y")%></b><br />
    <div>
      <table  id="table_id" class="display" >
        <thead>
          <tr>
            <th style="text-align:left; max-width: 130px;">National ID</th>
            <th style="text-align:left; max-width: 150px;">First Name</th>
            <th style="text-align:left; max-width: 150px;">Last Name</th>
            <th style="text-align:left; max-width: 150px;">Current Residence</th>
            <th style="text-align:left; max-width: 150px;">Home District</th>
          </tr>
        </thead>
        <tbody>
          <% @patient_details.each do |key, value| %>
          <tr>
            <td><%= value[:national_id] %></td>
            <td><%= value[:fname] %></td>
            <td><%= value[:lname] %></td>
            <td><%= value[:residence] %></td>
            <td><%= value[:home] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="horizontal_line">
      <hr width="100%" color="gray"/>
    </div>
    <div id="keypad">
      <span class="keypad">
      </span>
    </center>
  </div>
</body>
</html>
